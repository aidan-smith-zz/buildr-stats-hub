generator client {
  provider  = "prisma-client-js"
  engineType = "binary"
  binaryTargets = ["native", "darwin-arm64", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url      = env("DATABASE_URL")
}
        

model Team {
  id        Int     @id @default(autoincrement())
  apiId     String? @unique
  name      String
  shortName String?
  country   String?
  crestUrl  String? // Team logo/crest URL from API-Football (media.api-sports.io)

  homeFixtures     Fixture[]           @relation("HomeTeamFixtures")
  awayFixtures     Fixture[]           @relation("AwayTeamFixtures")
  players          Player[]
  seasonStats     PlayerSeasonStats[]
  teamSeasonStats  TeamSeasonStats[]
  fixtureTeamStats FixtureTeamStats[]
  fixtureLineups   FixtureLineup[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TeamSeasonStats {
  id        Int   @id @default(autoincrement())
  teamId    Int
  season    String
  league    String
  leagueId  Int?  // API-Football league id

  minutesPlayed Int   @default(0)
  goalsFor      Int   @default(0)
  goalsAgainst  Int   @default(0)
  xgFor         Float?
  corners       Int   @default(0)
  yellowCards   Int   @default(0)
  redCards      Int   @default(0)

  team Team @relation(fields: [teamId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([teamId, season, league])
  @@index([teamId, season, league])
}

enum LineupStatus {
  starting
  substitute
}

model Fixture {
  id       Int      @id @default(autoincrement())
  apiId    String?  @unique
  date     DateTime
  season   String
  league   String?
  leagueId Int?     // API-Football league id, for filtering
  status   String   // e.g. SCHEDULED, FINISHED

  homeTeamId Int
  awayTeamId Int

  homeTeam   Team   @relation("HomeTeamFixtures", fields: [homeTeamId], references: [id])
  awayTeam   Team   @relation("AwayTeamFixtures", fields: [awayTeamId], references: [id])
  teamStats  FixtureTeamStats[]
  lineups    FixtureLineup[]
  liveScoreCache LiveScoreCache?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
}

model FixtureLineup {
  id           Int          @id @default(autoincrement())
  fixtureId    Int
  teamId       Int
  playerId     Int
  lineupStatus LineupStatus
  createdAt    DateTime     @default(now())

  fixture Fixture @relation(fields: [fixtureId], references: [id], onDelete: Cascade)
  team    Team    @relation(fields: [teamId], references: [id], onDelete: Cascade)
  player  Player  @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([fixtureId, teamId, playerId])
  @@index([fixtureId])
}

model FixtureTeamStats {
  id        Int  @id @default(autoincrement())
  fixtureId Int
  teamId    Int

  goals       Int   @default(0)
  xg          Float?
  corners     Int   @default(0)
  yellowCards Int   @default(0)
  redCards    Int   @default(0)

  fixture Fixture @relation(fields: [fixtureId], references: [id], onDelete: Cascade)
  team    Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([fixtureId, teamId])
  @@index([fixtureId])
}

model Player {
  id          Int     @id @default(autoincrement())
  apiId       String? @unique
  name        String
  position    String?
  shirtNumber Int?

  teamId Int
  team   Team @relation(fields: [teamId], references: [id])

  seasonStats   PlayerSeasonStats[]
  fixtureLineups FixtureLineup[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PlayerSeasonStats {
  id Int @id @default(autoincrement())

  playerId Int
  teamId   Int
  season   String
  league   String

  appearances    Int @default(0)
  minutes        Int @default(0)
  goals          Int @default(0)
  assists        Int @default(0)
  fouls          Int @default(0)
  shots          Int @default(0)
  shotsOnTarget  Int @default(0)
  tackles        Int @default(0)
  yellowCards    Int @default(0)
  redCards       Int @default(0)

  player Player @relation(fields: [playerId], references: [id])
  team   Team   @relation(fields: [teamId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([playerId, teamId, season, league])
  @@index([teamId, season, league])
}

model ApiFetchLog {
  id        Int      @id @default(autoincrement())
  resource  String // e.g. "fixtures", "playerSeasonStats"
  fetchedAt DateTime @default(now())
  success   Boolean  @default(true)
  message   String?

  createdAt DateTime @default(now())

  @@index([resource, fetchedAt])
}

/** Ephemeral cache for live score (90s TTL). Shared across Vercel instances. */
model LiveScoreCache {
  fixtureId      Int      @id
  homeGoals      Int      @default(0)
  awayGoals      Int      @default(0)
  elapsedMinutes Int?
  statusShort    String   @default("?")
  cachedAt       DateTime @default(now())

  fixture Fixture @relation(fields: [fixtureId], references: [id], onDelete: Cascade)

  @@map("LiveScoreCache")
}
